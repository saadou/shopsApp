{% extends 'home.html.twig' %}


{% block body %}


<div class="container" style="margin-top: 30px;">
    <h2>Favorite Stores</h2>

    <div class="row" style="text-align: center">
        {% for fav in favoriteStores %}
            <div class="col" style="border: dotted 1px wheat;background-color: white;margin-bottom: 10px;padding-top: 10px;">
                <p>
                    <span><em>{{ fav.shop.name }} </em></span>
                </p>
                <img src="https://fakeimg.pl/250x300/">

                <div style="margin: 10px 0px 10px 0px;">

                    <a  class="btn btn-outline-danger my-2 my-sm-0 " href="{{ path('remove_fav_store', {'id' : fav.id }) }}">Remove</a>
                </div>

            </div>
            <br>
            {% if loop.index is divisible by(3) %}
                <div class="w-100"></div>
            {% endif %}
        {% endfor %}

    </div>

</div>

{% endblock body %}