{% extends 'home.html.twig' %}


{% block body %}


<div class="container" style="margin-top: 30px;">
    <h2>Nearby Stores</h2>
    <div class="row" style="text-align: center">
        {% for store in stores %}
            <div class="col" style="border: dotted 1px wheat;background-color: white;margin-bottom: 10px;padding-top: 10px;">
                <p>
                <span><em>{{ store.name }} </em></span>
                </p>
                <img src="https://fakeimg.pl/250x300/">

                <div style="margin: 10px 0px 10px 0px;">
                    <a href="{{ path('like_store',{ 'user_id' : user.id ,'shop_id' : store.id }) }}"  class="btn btn-outline-primary my-2 my-sm-0" >Like</a>

                    <a href="{{ path('dislike_store',{ 'user_id' : user.id ,'shop_id' : store.id }) }}"  class="btn btn-outline-danger my-2 my-sm-0 " >Dislike</a>
                </div>

            </div>
            <br>
            {% if loop.index is divisible by(3) %}
            <div class="w-100"></div>
            {% endif %}
        {% endfor %}

    </div>


</div>
{% endblock body %}